<div class="container">
  <h1>Join the Waitlist</h1>
  <p>Sign up with your email to be notified when we launch!</p>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% elsif flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>

  <form action="<%= waitlist_path %>" method="post">
    <%= csrf_meta_tags %>
    <input type="email" name="email" placeholder="Enter your email" required>
    <button type="submit">Join the Waitlist</button>
  </form>

  <p>Have a beta login? <a href="<%= new_session_path(:user) %>">Sign in here.</a></p>
</div>
<div class="container">
<% if user_signed_in? %>
  <p>Welcome, <%= current_user.name || current_user.email %>!</p>
  <p><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "logout-btn" %></p>
<% else %>
  <p><%= link_to "Sign In", new_user_session_path, class: "signin-btn" %></p>
<% end %>
</div>
