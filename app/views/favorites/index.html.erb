<div style="max-width: 800px; margin: 0 auto;">
  <h1>⭐️ Your Favorites</h1>

  <% if current_user.favorites.any? %>
    <h2 style="margin-top: 24px;">🧥 Favorite Clothing</h2>
    <% current_user.favorite_clothings.each do |item| %>
      <div style="margin-bottom: 16px; border-bottom: 1px solid #ddd; padding-bottom: 8px;">
        <%= image_tag item.image, style: "max-width: 100px;" if item.image.present? %>
        <p><strong><%= item.category %></strong> — <%= item.color %> (<%= item.size %>)</p>
        <p><%= link_to "View", "/clothings/#{item.id}" %></p>
      </div>
    <% end %>

    <h2 style="margin-top: 32px;">🧢 Favorite Outfits</h2>
    <% current_user.favorite_outfits.each do |fit| %>
      <div style="margin-bottom: 16px; border-bottom: 1px solid #ddd; padding-bottom: 8px;">
        <p><strong><%= fit.name %></strong></p>
        <p><%= pluralize(fit.clothes.count, "item") %></p>
        <p><%= link_to "View", "/outfits/#{fit.id}" %></p>
      </div>
    <% end %>
  <% else %>
    <p>You haven't favorited anything yet!</p>
  <% end %>
</div>
